{
  "system": {
    "log_level": "INFO",
    "data_directory": "triangulum_data",
    "relationship_path": "triangulum_relationships.json"
  },
  "monitoring": {
    "enabled": true
  },
  "feedback": {
    "enabled": true,
    "db_path": "triangulum_data/feedback.db"
  },
  "engine": {
    "timeout": 600,
    "retry_attempts": 3
  },
  "repair": {
  },
  "analysis": {
    "max_files": 1000,
    "ignored_patterns": [
      "__pycache__",
      ".git",
      ".venv",
      "*.pyc",
      "*.pyo",
      "*.pyd"
    ]
  },
  "llm": {
    "default_provider": "openai",
    "providers": {
      "openai": {
        "api_key_env_var": "OPENAI_API_KEY",
        "default_model": "o3",
        "models": {
          "o3": { "reasoning_power": 1.5 },
          "gpt-4o-mini": { "reasoning_power": 1.0 },
          "gpt-4o": { "reasoning_power": 1.2 }
        }
      },
      "anthropic": {
        "api_key_env_var": "ANTHROPIC_API_KEY",
        "default_model": "claude-3-haiku-20240307",
        "models": {
          "claude-3-haiku-20240307": { "reasoning_power": 0.9 },
          "claude-3-opus-20240229": { "reasoning_power": 1.3 }
        }
      },
      "groq": {
        "api_key_env_var": "GROQ_API_KEY",
        "default_model": "llama3-8b-8192",
        "models": {
          "llama3-8b-8192": { "reasoning_power": 0.8 }
        }
      },
      "openrouter": {
        "api_key_env_var": "OPENROUTER_API_KEY",
        "default_model": "openai/gpt-4o-mini",
        "models": {
          "openai/gpt-4o-mini": { "reasoning_power": 1.0 }
        }
      },
      "ollama": {
        "base_url_env_var": "OLLAMA_BASE_URL",
        "base_url_default": "http://localhost:11434",
        "default_model": "llama3",
        "models": {
          "llama3": { "reasoning_power": 0.8 },
          "codellama": { "reasoning_power": 0.9 },
          "mistral": { "reasoning_power": 0.7 }
        }
      },
      "lmstudio": {
        "base_url_env_var": "LMSTUDIO_BASE_URL",
        "base_url_default": "http://localhost:1234",
        "default_model": "local-model",
        "models": {
          "local-model": { "reasoning_power": 0.8 }
        }
      }
    },
    "agent_model_mapping_defaults": {
        "Observer": { "provider_env_var": "TRI_OBSERVER_PROVIDER", "model_env_var": "TRI_OBSERVER_MODEL", "default_provider": "openai", "default_model": null },
        "Analyst":  { "provider_env_var": "TRI_ANALYST_PROVIDER", "model_env_var": "TRI_ANALYST_MODEL", "default_provider": "openai", "default_model": null },
        "Verifier": { "provider_env_var": "TRI_VERIFIER_PROVIDER", "model_env_var": "TRI_VERIFIER_MODEL", "default_provider": "openai", "default_model": null }
    },
    "generation_params": {
    },
    "resilience": {
        "fallback_providers": ["openai", "anthropic"],
        "request_retries": 3,
        "retry_delay_seconds": 1
    },
    "routing_rules": {
        "agent_overrides": {
            "Analyst": { "provider": "openai", "model": "gpt-4o" }
        },
        "task_rules": [
            {
                "keywords": ["summarize", "compress", "explain"],
                "provider": "groq",
                "model": "llama3-8b-8192"
            },
            {
                "keywords": ["generate_code", "patch", "fix", "implement"],
                "provider": "anthropic",
                "model": "claude-3-opus-20240229"
            }
        ],
        "hybrid_strategies": [
            {
                "condition": "local_available",
                "keywords": ["simple", "quick", "draft"],
                "local_provider": "ollama",
                "local_model": "llama3",
                "fallback_provider": "groq",
                "fallback_model": "llama3-8b-8192"
            }
        ]
    }
  },
  "dashboard": {
    "output_dir": "triangulum_dashboard_final_consolidated",
    "enable_server": true,
    "server_port": 8080,
    "auto_open_browser": true
  },
  "agents": {
    "orchestrator": {
      "enabled": true,
      "max_retries": 3,
      "timeout": 60,
      "parallel_execution": true,
      "worker_count": 4,
      "progress_update_interval": 3.0,
      "default_task_timeout": 300.0
    },
    "bug_detector": {
      "enabled": true,
      "max_bug_patterns": 250,
      "max_file_size": 2097152,
      "enable_context_aware_detection": true,
      "enable_multi_pass_verification": true,
      "use_ast_parsing": true,
      "relationship_analyst_agent_id": "relationship_analyst"
    },
    "relationship_analyst": {
      "enabled": true,
      "name": "Relationship Analyst Agent",
      "cache_dir": ".triangulum_cache/relationship_analysis_cache",
      "visualization_dir": "triangulum_visualizations/relationships"
    },
    "priority_analyzer": {
      "enabled": true,
      "weights": {
            "severity": 0.4,
            "bug_count": 0.2,
            "dependencies": 0.15,
            "dependents": 0.15,
            "complexity": 0.05,
            "business_value": 0.05
        }
    },
    "strategy_agent": {
      "enabled": true,
      "enable_learning": true,
      "learning_data_path": "triangulum_data/strategy_learning_data",
      "min_success_threshold": 0.65
    },
    "implementation_agent": {
      "enabled": true,
      "max_file_size": 2097152,
      "backup_files": true,
      "backup_dir": ".triangulum_backups/implementations",
      "validate_patches": true
    },
    "verification_agent": {
      "enabled": true,
      "test_timeout": 45,
      "verification_data_dir": ".triangulum_verification_data",
      "default_environment": "python3.9_default"
    },
    "router": {
      "enabled": true
    }
  }
}
